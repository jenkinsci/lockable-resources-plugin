<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define"
	xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
	<f:section title="${%Lockable Resources Manager}">
		<f:entry title="${%Create automatic resources}" field="autoCreateResources">
			<f:checkbox/>
		</f:entry>
		<f:entry title="${%Labels for automatic generation}">
			<f:repeatable field="labelSets" header="${%Node labels}" minimum="0" add="${%Add label set}">
				<table width="100%">
					<st:include page="config.jelly" class="org.jenkins.plugins.lockableresources.autogen.LabelSet"/>
					<f:entry title="">
						<div align="right"><f:repeatableDeleteButton/></div>
					</f:entry>
				</table>
			</f:repeatable>
		</f:entry>
		<f:entry title="${%Lockable Resources}">
			<f:repeatable field="manualResources" header="${%Resource}" minimum="0" add="${%Add Lockable Resouce}">
				<table width="100%">
					<st:include page="config.jelly" class="org.jenkins.plugins.lockableresources.LockableResource"/>
					<f:entry title="">
						<div align="right"><f:repeatableDeleteButton/></div>
					</f:entry>
				</table>
			</f:repeatable>
		</f:entry>
	</f:section>
</j:jelly>
